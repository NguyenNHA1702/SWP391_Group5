    </servlet-mapping>
    <!-- Session -->
    <servlet>
        <servlet-name>FarmerRegisterServlet</servlet-name>
        <servlet-class>controller.FarmerRegisterServlet</servlet-class>
        <multipart-config>
            <location>/</location>
            <max-file-size>10485760</max-file-size>
            <!-- 10MB -->
            <max-request-size>20971520</max-request-size>
            <!-- 20MB -->
            <file-size-threshold>5242880</file-size-threshold>
            <!-- 5MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FarmerRegisterServlet</servlet-name>
        <url-pattern>/farmerRegister</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCampaignServlet</servlet-name>
